<h1>Searching for - <%= @search_term %></h1>

<table border = "1">
	<tr>
		<th>Imgae</th>
		<th>Name</th>
		<th>Description</th>
	</tr>
	<% @courses.each do |course| %>
		<tr class=<%= cycle('even', 'odd') %>>
			<td><%= image_tag(course["smallIcon"]) %></td>
			<td><%= course["name"] %></td>
			<td><%= course["shortDescription"] %></td>
		</tr>
	<% end %>
</table>

